<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <Button
            android:id="@+id/btn_pare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/boton_redondo2"
            android:onClick="pare"
            android:paddingHorizontal="15dp"
            android:text="Pare" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suben:"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="175dp" />

            <EditText
                android:id="@+id/edittxt_suben"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="94dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textVie9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bajan:"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="175dp" />

            <EditText
                android:id="@+id/edittxt_bajan"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="164dp" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_grabar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/boton_redondo3"
            android:onClick="grabar"
            android:paddingHorizontal="15dp"
            android:text="Grabar" />

        <Button
            android:id="@+id/btn_fin_captura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/boton_redondo4"
            android:onClick="fin_captura"
            android:paddingHorizontal="15dp"
            android:text="Fin Captura" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>